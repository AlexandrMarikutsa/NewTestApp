<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_checked="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="@color/buttons_background_on" />
                <gradient android:angle="-90" android:startColor="@color/buttons_background_on" android:endColor="@color/buttons_background_on"  />
            </shape>
        </item>
        <item android:state_checked="false" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="@color/buttons_background_off" />
                <gradient android:angle="-90" android:startColor="@color/buttons_background_off" android:endColor="@color/buttons_background_off"  />
            </shape>
        </item>
</selector>