<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_layout_height"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_background">

        <Button
            android:layout_width="@dimen/toolbar_button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_graph_name"
            android:id="@+id/graph"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="right"
            android:background="@color/toolbar_button_background"
            android:textSize="@dimen/toolbar_button_text_size"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/toolbar" />
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
