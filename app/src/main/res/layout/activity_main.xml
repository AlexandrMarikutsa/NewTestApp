<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_layout_height"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_background">

        <Button
            android:layout_width="@dimen/toolbar_button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_graph_name"
            android:id="@+id/graph"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="right"
            android:background="@color/toolbar_button_background"
            android:textSize="@dimen/toolbar_button_text_size"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/toolbar" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/central_text"
        android:text="@string/central_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/central_text_size"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/central_text_view_layout_margin_top" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/all_buttons"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/central_text"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_row_buttons">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="8pt">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_row_buttons">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="8pt">
            </Button>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="8pt">
            </Button>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:hint="Enter your text"
        android:layout_width="match_parent"
        android:layout_below="@+id/all_buttons"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">
    </EditText>

</RelativeLayout>
